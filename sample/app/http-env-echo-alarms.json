{
  "name": "http-env-echo",
  "health_check": "HTTP:80/",
  "instance_type": "t2.nano",
  "instance_min": 1,
  "instance_max": 4,
  "services": {
    "http-env-echo": {
      "image": "pwagner/http-env-echo",
      "ports": {
        "80": 8080
      }
    }
  },
  "public_ports": {
    "80": {
      "sources": ["0.0.0.0/0"]
    }
  },
  "alarms": {
    "endpoints": {
      "emailpete": {
        "type": "email",
        "addresses": ["pwagner@pebble.com"]
      },
      "more_instances": {
        "type": "scaleup",
        "adjustment": "100%"
      },
      "less_instances": {
        "type": "scaledown",
        "adjustment": "50%"
      }
    },
    "triggers": {
      "HighCpu": {
        "metric": "EC2/CPUUtilization",
        "threshold": ">85",
        "period": "3x60",
        "endpoints": ["emailpete"]
      },
      "LowCpu": {
        "metric": "EC2/CPUUtilization",
        "threshold": "<15",
        "period": "3x60",
        "endpoints": ["emailpete"]
      },
      "QueueDeep": {
        "namespace": "AWS/SQS",
        "metric": "ApproximateNumberOfMessagesVisible",
        "threshold": ">=5",
        "period": "3x60",
        "statistic": "Average",
        "dimensions": {
          "QueueName": "pwagner-test"
        },
        "endpoints": ["more_instances"]
      },
      "QueueShallow": {
        "namespace": "AWS/SQS",
        "metric": "ApproximateNumberOfMessagesVisible",
        "threshold": "<5",
        "period": "3x60",
        "statistic": "Average",
        "dimensions": {
          "QueueName": "pwagner-test"
        },
        "endpoints": ["less_instances"]
      }
    }
  }
}
